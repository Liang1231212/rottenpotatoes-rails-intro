-#  This file is app/views/movies/index.html.haml
%h1 All Movies

%table#movies
  %thead
    %tr
      %th <a href="https://shrouded-inlet-86214.herokuapp.com/sortByMovilesTitle">Movie Title</a>
      %th <a href="https://shrouded-inlet-86214.herokuapp.com/sortByRating">Rating</a>
      %th <a href="https://shrouded-inlet-86214.herokuapp.com/sortByReleaseDate">Release Date</a>
      %th <a href="https://shrouded-inlet-86214.herokuapp.com/sortByMoreInfo">More Info</a>
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title 
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path
